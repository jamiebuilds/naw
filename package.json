{
	"name": "naw",
	"version": "0.1.2",
	"description": "Your very own containerized build system!",
	"main": "index.js",
	"keywords": [],
	"author": "Jamie Kyle <me@thejameskyle.com>",
	"license": "MIT",
	"files": [
		"./dist",
		"./config.schema.json"
	],
	"bin": {
		"naw": "./dist/cli.js"
	},
	"scripts": {
		"format": "prettier --write '**'",
		"build": "rm -rf dist && mkdir dist && npm run -s build:codegen && npm run -s build:schema && npm run -s build:src",
		"build:codegen": "quicktype ./src/config/types.src.ts -o ./src/config/types.gen.ts -l ts --runtime-typecheck --top-level Config --converters top-level --acronym-style original",
		"build:schema": "quicktype ./src/config/types.src.ts -o ./dist/naw-config.schema.json -l schema",
		"build:src": "tsc && chmod +x ./dist/cli.js",
		"prepublishOnly": "npm run -s build"
	},
	"dependencies": {
		"chalk": "^2.4.2",
		"cross-spawn": "^7.0.0",
		"extract-stack": "^2.0.0",
		"find-up": "^4.1.0",
		"make-dir": "^3.0.0",
		"meow": "^5.0.0",
		"path-exists": "^4.0.0",
		"string.prototype.replaceall": "^1.0.0"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.0",
		"@types/meow": "^5.0.0",
		"@types/node": "^12.7.5",
		"@typescript-eslint/eslint-plugin": "^1.3.0",
		"@typescript-eslint/parser": "^2.3.1",
		"prettier": "^1.18.2",
		"quicktype": "^15.0.202",
		"typescript": "3.3.3"
	}
}
